//- Designed via https://webflow.com/design/ingoodcompany-info
include mixins.pug

doctype html
html(lang="en")
  head
    meta(charset="utf-8")

    // Favicon by Made by Made from the Noun Project, https://thenounproject.com/made.somewhere/uploads/?i=707660
    //- Favicon generated by https://realfavicongenerator.net/
    link(rel="apple-touch-icon", sizes="180x180", href="/browser/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="/browser/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="/browser/favicon-16x16.png")
    link(rel="manifest", href="/browser/site.webmanifest")
    link(rel="shortcut icon", href="/browser/favicon.ico")
    meta(name="msapplication-TileColor", content="#da532c")
    meta(name="msapplication-config", content="/browser/browserconfig.xml")
    meta(name="theme-color", content="#ffffff")

    //- https://getbootstrap.com/docs/4.1/getting-started/download/
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", crossorigin="anonymous")

    //- Define/require a page title
    block title
      - throw new Error('No title was specified for page');
  body
    .container
      //- Specify where all our content goes
      block content

      //- Define a common footer
      hr
      p.text-center
        = "Made with "
        span(aria-label="love")= "<3"
        = " by "
        a(href="https://github.com/twolfson/ingoodcompany.info") Todd Wolfson
        = " under the "
        a(href="https://github.com/twolfson/ingoodcompany.info/blob/master/UNLICENSE") UNLICENSE
        br
        span.text-muted
          = "Hosted by "
          a(href="https://zeit.co/now") ZEIT Now
      p.text-center
        a.text-muted(href="https://github.com/twolfson/ingoodcompany.info/tree/" + encodeURIComponent(semverVersion))
          = "Version " + semverVersion
